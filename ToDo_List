todo_list = []
while True:
 if len(todo_list) == 0:
   print("Your ToDo list is empty")
 else: 
   index = 1
   for task in todo_list:
     print(f"{index}. {task}")
     index += 1
 print("Options: ")
 print("1) Add Task") 
 print("2) Remove Task")
 print("3) Quit")
 choice = input("Please choose option 1),2) or 3)")
 if choice == "1":
   print("Adding Task")
   new_task = input("Enter the task: ")
   todo_list.append(new_task)
   print(todo_list)
 elif choice == "2":
  check = len(todo_list)
  if check > 0:
    todo_list.pop()
    print(f"Your todo_list has 'check' elements")
 elif choice == "3":
  print("Quitting") 
  break
